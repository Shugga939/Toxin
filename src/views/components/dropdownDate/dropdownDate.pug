mixin dropdownDate({ firstTitle, secondTitle })
  if (secondTitle)
    .dropdown-date
      label.dropdown-date__label
        span.dropdown-date__title
          | #{firstTitle}
        .dropdown-date__input-container
          input(
            autocomplete="off" 
            type="text"
            placeholder="ДД.ММ.ГГГГ" 
            name="date-arrival"
          ).dropdown-date__input
          button(type='button').dropdown-date__button
            span.dropdown-date__status
              include Images/icons/expand-more.svg
      label.dropdown-date__label
        span.dropdown-date__title
          | #{secondTitle}
        .dropdown-date__input-container
          input(
            autocomplete="off" 
            type="text" 
            placeholder="ДД.ММ.ГГГГ" 
            name="date-leaving"
            ).dropdown-date__input
          button(type='button').dropdown-date__button
            span.dropdown-date__status  
              include Images/icons/expand-more.svg
  else
    .dropdown-date
      label.dropdown-date__label.dropdown-date__label--long
        span.dropdown-date__title
          | #{firstTitle}
        .dropdown-date__input-container
          input(
            readonly=true
            type="text"
            placeholder="ДД.ММ.ГГГГ - ДД.ММ.ГГГГ" 
            name="dates"
          ).dropdown-date__input.dropdown-date__input--long
          button(type='button').dropdown-date__button
            span.dropdown-date__status
              include Images/icons/expand-more.svg