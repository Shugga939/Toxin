mixin roomsPhoto( {roomNumber}, photo )
	.rooms-photo
		img(src=require(`Images/photos/rooms/room_${roomNumber}/${photo[0]}`) alt="Фото 1" class="rooms-photo__main-photo rooms-photo__photo")
		.rooms-photo__additional-photos
			img(src=require(`Images/photos/rooms/room_${roomNumber}/${photo[1]}`) alt="Фото 2" class="rooms-photo__additional-photo rooms-photo__photo")
			img(src=require(`Images/photos/rooms/room_${roomNumber}/${photo[2]}`) alt="Фото 3" class="rooms-photo__additional-photo photo-rooms-photo__photo")
